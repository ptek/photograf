<div style="
    position: fixed;
    width: 100%;
    height: 100%;
">
    <div style="
        width:100%; 
        height:100%; 
        display:block; 
        position:absolute; 
        background-image:url(/originals/{{.item}});
        background-position: center center;
        background-repeat: no-repeat;
        background-size: contain;
        background-color: #222;
        "
    >
        <button hx-target="#original_view" hx-get="/original/{{.previousItem}}">Newer</button>
        <button hx-target="#original_view" hx-get="/empty">Close</button>
        <button hx-target="#original_view" hx-get="/original/{{.nextItem}}">Older</button>
    </div>
</div>